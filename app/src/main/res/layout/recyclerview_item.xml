<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/xAxisImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/x_axis"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/xAxisTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/xAxisImageView"
        android:layout_alignBottom="@id/xAxisImageView"
        android:layout_alignLeft="@+id/xAxisImageView"
        android:layout_toLeftOf="@+id/yAxisImageView"
        android:textStyle="bold"
        android:text="123.4"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/yAxisImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/y_axis" />
    <TextView
        android:id="@+id/yAxisTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/yAxisImageView"
        android:layout_alignBottom="@id/yAxisImageView"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/yAxisImageView"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:text="123.4"
        android:gravity="center"/>
</RelativeLayout>